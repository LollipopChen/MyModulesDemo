<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.example.mymodulesdemo.ui.main.me.info.UserInfoViewModel"/>
        <variable
            name="viewModel"
            type="UserInfoViewModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar"
            layout="@layout/layout_back_title_bar"
            app:toolbarViewModel="@{viewModel}"/>

        <TextView
            android:id="@+id/tv_user_name_label"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_40_dp"
            app:layout_constraintRight_toLeftOf="@+id/tv_user_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            android:layout_marginTop="@dimen/dimen_10_dp"
            android:layout_marginStart="@dimen/dimen_10_dp"
            android:textSize="@dimen/text_size_14_sp"
            android:textColor="@color/text_color"
            android:gravity="center_vertical"
            android:text="用户名："/>

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="@dimen/dimen_0_dp"
            android:layout_height="@dimen/dimen_40_dp"
            app:layout_constraintLeft_toRightOf="@+id/tv_user_name_label"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_user_name_label"
            android:textSize="@dimen/text_size_14_sp"
            android:textColor="@color/text_color"
            android:gravity="center_vertical"
            android:text="@{viewModel.userName}"/>

        <Button
            android:layout_width="@dimen/dimen_0_dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_user_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="@dimen/dimen_10_dp"
            android:textSize="@dimen/text_size_16_sp"
            onClickCommand="@{viewModel.onLogoutCommand}"
            android:text="退出登录"/>

    </android.support.constraint.ConstraintLayout>

</layout>