<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.mymodulesdemo.ui.main.me.widget.WidgetViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar"
            layout="@layout/layout_back_title_bar"
            app:toolbarViewModel="@{viewModel}"/>

        <TextView
            android:id="@+id/tv_selector"
            android:layout_width="@dimen/dimen_0_dp"
            android:layout_height="@dimen/dimen_40_dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingStart="@dimen/dimen_10_dp"
            android:paddingEnd="@dimen/dimen_10_dp"
            android:gravity="center_vertical"
            android:textColor="@color/text_color"
            android:drawableEnd="@mipmap/ic_right"
            android:text="多功能选择器"
            app:onClickCommand="@{viewModel.onSelectorClick}"/>

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="@dimen/dimen_0_dp"
            android:layout_height="@dimen/dimen_40_dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_selector"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingStart="@dimen/dimen_10_dp"
            android:paddingEnd="@dimen/dimen_10_dp"
            android:gravity="center_vertical"
            android:textColor="@color/text_color"
            android:drawableEnd="@mipmap/ic_right"
            android:text="数量加减控件"/>

        <TextView
            android:id="@+id/tv_horizontal_item"
            android:layout_width="@dimen/dimen_0_dp"
            android:layout_height="@dimen/dimen_40_dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_count"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingStart="@dimen/dimen_10_dp"
            android:paddingEnd="@dimen/dimen_10_dp"
            android:gravity="center_vertical"
            android:textColor="@color/text_color"
            android:drawableEnd="@mipmap/ic_right"
            android:text="多功能横向Item"/>

        <TextView
            android:id="@+id/tv_observer"
            android:layout_width="@dimen/dimen_0_dp"
            android:layout_height="@dimen/dimen_40_dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_horizontal_item"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingStart="@dimen/dimen_10_dp"
            android:paddingEnd="@dimen/dimen_10_dp"
            android:gravity="center_vertical"
            android:textColor="@color/text_color"
            android:drawableEnd="@mipmap/ic_right"
            android:text="观察着按钮"/>

        <TextView
            android:id="@+id/tv_multifunction_dialog"
            android:layout_width="@dimen/dimen_0_dp"
            android:layout_height="@dimen/dimen_40_dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_observer"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingStart="@dimen/dimen_10_dp"
            android:paddingEnd="@dimen/dimen_10_dp"
            android:gravity="center_vertical"
            android:textColor="@color/text_color"
            android:drawableEnd="@mipmap/ic_right"
            android:text="多功能对话框"/>

        <TextView
            android:id="@+id/tv_chat"
            android:layout_width="@dimen/dimen_0_dp"
            android:layout_height="@dimen/dimen_40_dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_multifunction_dialog"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingStart="@dimen/dimen_10_dp"
            android:paddingEnd="@dimen/dimen_10_dp"
            android:gravity="center_vertical"
            android:textColor="@color/text_color"
            android:drawableEnd="@mipmap/ic_right"
            android:text="聊天"/>

        <TextView
            android:id="@+id/tv_photo_view"
            android:layout_width="@dimen/dimen_0_dp"
            android:layout_height="@dimen/dimen_40_dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_chat"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingStart="@dimen/dimen_10_dp"
            android:paddingEnd="@dimen/dimen_10_dp"
            android:gravity="center_vertical"
            android:textColor="@color/text_color"
            android:drawableEnd="@mipmap/ic_right"
            android:text="图片查看器"/>

    </android.support.constraint.ConstraintLayout>

</layout>