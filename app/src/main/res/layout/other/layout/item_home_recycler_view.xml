<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.example.mymodulesdemo.ui.main.home.HomeItemViewModel"/>

        <variable
            name="viewModel"
            type="com.example.mymodulesdemo.ui.main.home.HomeItemViewModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_10_dp"
        binding:onClickCommand="@{viewModel.itemClick}">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="@dimen/dimen_0_dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_14_sp"
            android:text="@{viewModel.entity.title}"
            tools:text="自定义view"/>

        <TextView
            android:id="@+id/tv_classic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_12_sp"
            android:text="分类："/>

        <TextView
            android:id="@+id/tv_type1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_gradient"
            android:padding="@dimen/dimen_4_dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12_sp"
            app:layout_constraintLeft_toRightOf="@+id/tv_classic"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            android:text="@{viewModel.entity.chapterName}"/>

        <TextView
            android:id="@+id/tv_type2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_gradient"
            android:padding="@dimen/dimen_4_dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12_sp"
            app:layout_constraintLeft_toRightOf="@+id/tv_type1"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            android:text="@{viewModel.entity.superChapterName}"/>

    </android.support.constraint.ConstraintLayout>

</layout>