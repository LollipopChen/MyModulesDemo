<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.example.mymodulesdemo.ui.otherview.SearchBarViewModel"/>

        <variable
            name="searBarViewModel"
            type="SearchBarViewModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/left_back"
            android:layout_width="@dimen/dimen_40_dp"
            android:layout_height="@dimen/dimen_0_dp"
            tools:ignore="MissingConstraints"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/ic_back"
            android:visibility="@{searBarViewModel.leftIconVisibleObservable}"
            app:onClickCommand="@{searBarViewModel.backOnClick}"/>


        <com.example.libbase.widget.ClearEditText
            android:layout_width="@dimen/dimen_0_dp"
            android:layout_height="@dimen/dimen_0_dp"
            app:layout_constraintLeft_toRightOf="@+id/left_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btn_search"
            android:background="@drawable/bg_ellipse_white"
            android:layout_margin="@dimen/dimen_10_dp"
            android:drawableLeft="@mipmap/ic_search_gray"
            android:drawablePadding="@dimen/dimen_5_dp"
            android:paddingStart="@dimen/dimen_5_dp"
            android:paddingEnd="@dimen/dimen_5_dp"
            android:gravity="center_vertical"
            android:text="@={searBarViewModel.searchKeyWord}"
            android:textSize="@dimen/text_size_12_sp"
            android:singleLine="true"
            app:setSelection="@{searBarViewModel.searchKeyWord}"
            tools:text="1111111111111"/>

        <Button
            android:id="@+id/btn_search"
            android:layout_width="@dimen/dimen_60_dp"
            android:layout_height="0dp"
            tools:ignore="MissingConstraints"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:onClickCommand="@{searBarViewModel.searchOnClick}"
            android:layout_marginTop="@dimen/dimen_10_dp"
            android:layout_marginEnd="@dimen/dimen_10_dp"
            android:layout_marginBottom="@dimen/dimen_10_dp"
            android:background="@drawable/bg_button_blue"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14_sp"
            android:text="搜索"/>

    </android.support.constraint.ConstraintLayout>

</layout>