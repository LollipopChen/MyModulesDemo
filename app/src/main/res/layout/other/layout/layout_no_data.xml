<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="loadingViewModel"
            type="com.example.mymodulesdemo.ui.otherview.viewmodel.LoadingViewModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_10_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="@{loadingViewModel.layoutVisibleObservable}"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/iv_no_data"
            android:layout_width="@dimen/dimen_80_dp"
            android:layout_height="@dimen/dimen_80_dp"
            android:src="@drawable/ic_no_data"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription"
            android:visibility="@{loadingViewModel.noDataIconVisibleObservable}"/>

        <ProgressBar
            android:id="@+id/animation_view"
            android:layout_width="@dimen/dimen_50_dp"
            android:layout_height="@dimen/dimen_50_dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_no_data"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_message"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/progress_bar"
            android:visibility="@{loadingViewModel.progressVisibleObservable}"/>

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="@dimen/dimen_0_dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8_dp"
            android:gravity="center"
            android:text="@{loadingViewModel.messageText}"
            android:textColor="@color/darkgray"
            android:textSize="@dimen/text_size_16_sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/animation_view" />

        <Button
            android:id="@+id/btn_loading_again"
            android:layout_width="@dimen/dimen_120_dp"
            android:layout_height="@dimen/dimen_40_dp"
            android:layout_marginTop="@dimen/dimen_10_dp"
            android:background="@drawable/shape_bg_green"
            android:text="@{loadingViewModel.buttonText}"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_14_sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_message"
            android:textAllCaps="false"
            android:visibility="@{loadingViewModel.buttonVisibleObservable}"
            binding:onClickCommand="@{loadingViewModel.buttonOnClick}"/>

    </android.support.constraint.ConstraintLayout>

</layout>