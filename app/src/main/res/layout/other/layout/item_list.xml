<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.example.mymodulesdemo.ui.main.list.ListChildrenItemViewModel"/>
        
        <variable
            name="viewModel"
            type="ListChildrenItemViewModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:onClickCommand="@{viewModel.itemClick}"
        android:background="@color/aliceblue">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="@dimen/dimen_0_dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="@{viewModel.observableField.title}"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_14_sp"
            tools:text="1564564564564564"
            android:padding="@dimen/dimen_10_dp"/>

        <TextView
            android:layout_width="@dimen/dimen_0_dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@{viewModel.observableField.author}"
            android:textColor="@color/darkred"
            android:textSize="@dimen/text_size_16_sp"
            tools:text="lalla"
            android:textStyle="bold"
            android:padding="@dimen/dimen_10_dp"/>

    </android.support.constraint.ConstraintLayout>

</layout>